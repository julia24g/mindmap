{
  "compilerOptions": {
    "rootDir": "src",
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2023"],
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "strict": true,
    "ignoreDeprecations": "5.0"
  },
  "exclude": [
    "prisma.config.ts",
    "__mocks__",
    "tests",
    "tests/**",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
